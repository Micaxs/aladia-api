{
  "name": "aladia-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start:gateway": "nest start gateway",
    "start:gateway:dev": "nest start gateway --watch",
    "start:auth": "nest start authentication",
    "start:auth:dev": "nest start authentication --watch",
    "start:all": "concurrently \"npm run start:gateway:dev\" \"npm run start:auth:dev\"",
    "start:docker": "docker compose up --build",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"apps/**/*.ts\" \"{core,common,config}/**/*.ts\"",
    "lint": "eslint \"{src,apps,core,common,config}/**/*.ts\" --fix",
    "test": "jest",
    "test:e2e": "jest -c jest-e2e.config.cjs"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/mongoose": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.0",
    "bcrypt": "^5.1.1",
    "cache-manager": "^7.2.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "joi": "^17.13.0",
    "mongoose": "^8.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.0",
    "rimraf": "^5.0.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^2.0.12",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.0.0",
    "ts-node": "^10.9.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0"
  }
}
